{
  "name": "HN Check",
  "version": "0.0.1",
  "description": "Finds the HN discussion for current tab",
  "icons": { "128": "icon.png" },
  "background": { "scripts": ["background.js"] },
  "permissions": [
    "tabs",
    "http://hn.algolia.com/*"
  ],
  "page_action": {
      "default_name": "Display HN",
      "default_popup": "popup.html",
      "default_icon": "marker.png"
  },
  "manifest_version": 2,
  "content_security_policy": "default-src 'none'; style-src 'self'; script-src 'self'; connect-src http://hn.algolia.com"
}
